<% include header %>
<% docs.forEach(function(doc, index){ %>
    <% if(index++ % 3 == 0) { %>
        <div class="row">
    <% } %>
            <div class="col-sm-4">
                <h3><%= doc.title %></h3>
                <a href="<%= /photo/doc._id %>"><img class="img-responsive img-thumbnail" src="<%= doc.src %>"></a>
            </div>
    <% if(index % 3 == 0){ %>
        </div>
    <% } %>
<% }) %>
<% include footer %>
